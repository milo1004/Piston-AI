{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Piston AI",
  "version": "0.1.0",
  "identifier": "com.miloc.piston-ai",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Piston AI",
        "width": 800,
        "height": 600,
        "fullscreen": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.icns"
    ],
      "macOS": {
        "signingIdentity":  "-"
    }
  }
}
